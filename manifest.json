{
  "manifest_version": 3,
  "name": "快投简历",
  "description": "一键海投,帮助您在boss直聘网站上一秒钟投递100份简历。",
  "version": "1.0",
  "author": "Kun Chen",
  "version_name": "1.0.0",
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://www.zhipin.com/*", "https://www.51job.com/*"],
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "webRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "icons": {
    "16": "images/Icon16.png",
    "32": "images/Icon32.png",
    "48": "images/Icon48.png",
    "128": "images/Icon128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/Icon128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["https://www.zhipin.com/*", "https://www.51job.com/*"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
